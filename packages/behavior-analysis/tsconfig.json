{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
